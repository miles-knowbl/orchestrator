{
  "id": "migration-loop",
  "name": "Migration Loop",
  "version": "1.0.0",
  "description": "Migration loop for moving between technologies with rollback safety. Takes migration planning through architecture, implementation, testing, verification, validation, review, and deployment with enforced quality gates.",
  "phases": [
    {
      "name": "INIT",
      "skills": [
        "migration-planner"
      ],
      "required": true
    },
    {
      "name": "SCAFFOLD",
      "skills": [
        "architect",
        "compatibility-checker"
      ],
      "required": true
    },
    {
      "name": "IMPLEMENT",
      "skills": [
        "implement"
      ],
      "required": true
    },
    {
      "name": "TEST",
      "skills": [
        "test-generation",
        "integration-test"
      ],
      "required": true
    },
    {
      "name": "VERIFY",
      "skills": [
        "code-verification"
      ],
      "required": true
    },
    {
      "name": "VALIDATE",
      "skills": [
        "rollback-validator"
      ],
      "required": true
    },
    {
      "name": "REVIEW",
      "skills": [
        "code-review"
      ],
      "required": true
    },
    {
      "name": "SHIP",
      "skills": [
        "deploy"
      ],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": [
        "retrospective"
      ],
      "required": true
    }
  ],
  "gates": [
    {
      "id": "plan-gate",
      "name": "Migration Plan Approval",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "MIGRATION-PLAN.md"
      ]
    },
    {
      "id": "architecture-gate",
      "name": "Architecture Approval",
      "afterPhase": "SCAFFOLD",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "ARCHITECTURE.md",
        "COMPATIBILITY-REPORT.md"
      ]
    },
    {
      "id": "verification-gate",
      "name": "Verification Check",
      "afterPhase": "VERIFY",
      "required": true,
      "approvalType": "auto",
      "deliverables": [
        "VERIFICATION.md"
      ],
      "autoCheck": "build passes, tests pass, lint clean"
    },
    {
      "id": "validation-gate",
      "name": "Rollback Validation",
      "afterPhase": "VALIDATE",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "ROLLBACK-REPORT.md"
      ]
    },
    {
      "id": "review-gate",
      "name": "Code Review Approval",
      "afterPhase": "REVIEW",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "CODE-REVIEW.md"
      ]
    },
    {
      "id": "deploy-gate",
      "name": "Deployment Approval",
      "afterPhase": "SHIP",
      "required": true,
      "approvalType": "human",
      "deliverables": []
    }
  ],
  "defaults": {
    "mode": "greenfield",
    "autonomy": "supervised"
  },
  "ui": {
    "theme": "migration",
    "layout": "chat-focused",
    "features": {
      "skillBrowser": true,
      "deliverableViewer": true,
      "gateApprovalUI": true,
      "progressTimeline": true,
      "metricsPanel": true
    },
    "branding": {
      "title": "Migration Loop",
      "subtitle": "Migrate with confidence"
    }
  },
  "skillUI": {
