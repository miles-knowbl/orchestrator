{
  "id": "audit-loop",
  "name": "Audit Loop",
  "version": "4.0.0",
  "description": "Taste-first audit loop for evaluating existing systems. Evaluates subjective quality (taste) before technical analysis, then applies MECE failure mode taxonomy to backend and UI pipelines. Produces a taste-ordered checklist to done.",
  "phases": [
    {
      "name": "TASTE",
      "skills": [
        "taste-discovery",
        "taste-eval"
      ],
      "required": true
    },
    {
      "name": "INIT",
      "skills": [
        "requirements",
        "pipeline-discovery",
        "ui-pipeline-discovery",
        "dependency-mapping"
      ],
      "required": true
    },
    {
      "name": "REVIEW",
      "skills": [
        "architecture-review",
        "security-audit",
        "perf-analysis",
        "failure-mode-analysis",
        "ui-failure-mode-analysis",
        "quality-eval-design",
        "taste-trace"
      ],
      "required": true
    },
    {
      "name": "VALIDATE",
      "skills": [
        "integration-test",
        "ui-interaction-test",
        "code-verification",
        "test-spec-generation"
      ],
      "required": true
    },
    {
      "name": "DOCUMENT",
      "skills": [
        "document",
        "taste-report"
      ],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": [
        "retrospective"
      ],
      "required": true
    }
  ],
  "gates": [
    {
      "id": "taste-gate",
      "name": "Taste Evaluation Approval",
      "afterPhase": "TASTE",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "TASTE-EVAL.md",
        "TASTE-GAPS.md"
      ]
    },
    {
      "id": "scope-gate",
      "name": "Audit Scope Approval",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "AUDIT-SCOPE.md"
      ]
    },
    {
      "id": "findings-gate",
      "name": "Findings Review",
      "afterPhase": "REVIEW",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "ARCHITECTURE-REVIEW.md",
        "SECURITY-AUDIT.md",
        "PERF-ANALYSIS.md",
        "PIPELINE-FAILURE-MODES.md",
        "UI-FAILURE-MODES.md",
        "TASTE-TRACE.md"
      ]
    },
    {
      "id": "report-gate",
      "name": "Audit Report Approval",
      "afterPhase": "DOCUMENT",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "AUDIT-REPORT.md"
      ]
    }
  ],
  "defaults": {
    "mode": "greenfield",
    "autonomy": "supervised"
  },
  "ui": {
    "theme": "audit",
    "layout": "chat-focused",
    "features": {
      "skillBrowser": true,
