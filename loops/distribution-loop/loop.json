{
  "id": "distribution-loop",
  "name": "Distribution Loop",
  "version": "1.0.0",
  "description": "Distribution loop for keeping all targets in sync: local rebuild, Railway server, Vercel dashboard, and GitHub Releases tarball. Lean 4-phase pipeline with auto gates designed for speed.",
  "phases": [
    {
      "name": "INIT",
      "skills": [
        "release-planner"
      ],
      "required": true
    },
    {
      "name": "VERIFY",
      "skills": [
        "code-verification"
      ],
      "required": true
    },
    {
      "name": "SHIP",
      "skills": [
        "git-workflow",
        "deploy",
        "distribute"
      ],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": [
        "retrospective"
      ],
      "required": true
    }
  ],
  "gates": [
    {
      "id": "readiness-gate",
      "name": "Readiness Check",
      "afterPhase": "VERIFY",
      "required": true,
      "approvalType": "auto",
      "deliverables": [],
      "autoCheck": "build passes, tests pass, lint clean"
    },
    {
      "id": "distribution-gate",
      "name": "Distribution Check",
      "afterPhase": "SHIP",
      "required": true,
      "approvalType": "auto",
      "deliverables": [],
      "autoCheck": "push succeeded, pipeline triggered"
    }
  ],
  "defaults": {
    "mode": "greenfield",
    "autonomy": "autonomous"
  },
  "ui": {
    "theme": "release",
    "layout": "chat-focused",
    "features": {
      "skillBrowser": true,
      "deliverableViewer": true,
      "gateApprovalUI": true,
      "progressTimeline": true,
      "metricsPanel": true
    },
    "branding": {
      "title": "Distribution Loop",
      "subtitle": "Keep all targets in sync"
    }
  },
  "skillUI": {
    "release-planner": {
      "displayName": "Release Planner",
      "icon": "clipboard-list",
      "outputDisplay": "markdown"
    },
    "code-verification": {
      "displayName": "Code Verification",
      "icon": "check-circle",
      "outputDisplay": "markdown"
    },
    "git-workflow": {
      "displayName": "Git Workflow",
      "icon": "git-branch",
      "outputDisplay": "markdown"
    },
    "deploy": {
      "displayName": "Deployment",
      "icon": "rocket",
      "outputDisplay": "markdown"
    },
    "distribute": {
      "displayName": "Distribution",
      "icon": "share",
      "outputDisplay": "markdown"
    },
    "retrospective": {
      "displayName": "Retrospective",
      "icon": "refresh",
      "outputDisplay": "markdown"
    }
  },
  "metadata": {
    "author": "Orchestrator",
    "tags": [
      "distribution",
      "deployment",
      "release",
      "ci-cd"
    ],
    "changelog": {
      "1.0.0": "Initial release â€” replaces release-loop with lean 4-phase distribution pipeline"
    },
    "category": "operations"
  }
}
