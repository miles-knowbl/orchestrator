{
  "id": "engineering-loop",
  "name": "Engineering Loop",
  "version": "3.1.0",
  "description": "Complete engineering loop for building production-quality software. Takes requirements through specification, architecture, implementation, testing, verification, validation, documentation, review, and deployment with enforced quality gates.",
  "phases": [
    {
      "name": "INIT",
      "skills": [
        "requirements",
        "spec"
      ],
      "required": true
    },
    {
      "name": "SCAFFOLD",
      "skills": [
        "architect",
        "scaffold"
      ],
      "required": true
    },
    {
      "name": "IMPLEMENT",
      "skills": [
        "implement"
      ],
      "required": true
    },
    {
      "name": "TEST",
      "skills": [
        "test-generation"
      ],
      "required": true
    },
    {
      "name": "VERIFY",
      "skills": [
        "code-verification"
      ],
      "required": true
    },
    {
      "name": "VALIDATE",
      "skills": [
        "code-validation",
        "security-audit"
      ],
      "required": true
    },
    {
      "name": "DOCUMENT",
      "skills": [
        "document"
      ],
      "required": true
    },
    {
      "name": "REVIEW",
      "skills": [
        "code-review"
      ],
      "required": true
    },
    {
      "name": "SHIP",
      "skills": [
        "deploy",
        "distribute"
      ],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": [
        "retrospective"
      ],
      "required": true
    }
  ],
  "gates": [
    {
      "id": "spec-gate",
      "name": "Specification Approval",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "REQUIREMENTS.md",
        "FEATURESPEC.md"
      ]
    },
    {
      "id": "architecture-gate",
      "name": "Architecture Approval",
      "afterPhase": "SCAFFOLD",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "ARCHITECTURE.md"
      ]
    },
    {
      "id": "verification-gate",
      "name": "Verification Check",
      "afterPhase": "VERIFY",
      "required": true,
      "approvalType": "auto",
      "deliverables": [
        "VERIFICATION.md"
      ],
      "autoCheck": "build passes, tests pass, lint clean"
    },
    {
      "id": "validation-gate",
      "name": "Validation Approval",
      "afterPhase": "VALIDATE",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "VALIDATION.md",
        "SECURITY-AUDIT.md"
      ]
    },
    {
      "id": "review-gate",
      "name": "Code Review Approval",
      "afterPhase": "REVIEW",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "CODE-REVIEW.md"
      ]
    },
    {
      "id": "deploy-gate",
      "name": "Deployment Approval",
      "afterPhase": "SHIP",
      "required": false,
      "approvalType": "conditional",
      "deliverables": [],
      "condition": "Auto-passes if no deploy target configured"
    }
  ],
  "defaults": {
    "mode": "greenfield",
    "autonomy": "supervised"
  },
  "ui": {
    "theme": "engineering",
    "layout": "chat-focused",
    "features": {
      "skillBrowser": true,
      "deliverableViewer": true,
      "gateApprovalUI": true,
      "progressTimeline": true,
      "metricsPanel": true
    },
    "branding": {
      "title": "Engineering Loop",
      "subtitle": "Build production-quality software"
    }
  },
