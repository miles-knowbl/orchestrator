{
  "id": "proposal-loop",
  "name": "Proposal Loop",
  "version": "2.0.0",
  "description": "Create compelling proposals through structured context gathering, insight cultivation, priority analysis, content validation, and polished document assembly. Six phases with human-in-the-loop gates ensure quality at every transition.",

  "phases": [
    {
      "name": "INIT",
      "skills": ["context-ingestion", "requirements"],
      "required": true
    },
    {
      "name": "SCAFFOLD",
      "skills": ["context-cultivation"],
      "required": true
    },
    {
      "name": "IMPLEMENT",
      "skills": ["priority-matrix"],
      "required": true
    },
    {
      "name": "VALIDATE",
      "skills": ["content-analysis"],
      "required": true
    },
    {
      "name": "DOCUMENT",
      "skills": ["proposal-builder"],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": ["retrospective"],
      "required": true
    }
  ],

  "gates": [
    {
      "id": "context-gate",
      "name": "Context & Requirements Review",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": ["CONTEXT-SOURCES.md", "RAW-CONTEXT.md", "REQUIREMENTS.md"]
    },
    {
      "id": "synthesis-gate",
      "name": "Insights & Patterns Review",
      "afterPhase": "SCAFFOLD",
      "required": true,
      "approvalType": "human",
      "deliverables": ["CULTIVATED-CONTEXT.md", "PATTERNS.md"]
    },
    {
      "id": "priorities-gate",
      "name": "Priorities & Strategy Review",
      "afterPhase": "IMPLEMENT",
      "required": true,
      "approvalType": "human",
      "deliverables": ["PRIORITIES.md", "MATRIX.md"]
    },
    {
      "id": "quality-gate",
      "name": "Content Quality Review",
      "afterPhase": "VALIDATE",
      "required": true,
      "approvalType": "human",
      "deliverables": ["CONTENT-ANALYSIS.md"]
    },
    {
      "id": "proposal-gate",
      "name": "Final Proposal Review",
      "afterPhase": "DOCUMENT",
      "required": true,
      "approvalType": "human",
      "deliverables": ["PROPOSAL.md"]
    }
  ],

  "defaults": {
    "mode": "greenfield",
    "autonomy": "supervised"
  },

  "ui": {
    "theme": "proposal",
    "layout": "dashboard",
    "features": {
      "skillBrowser": true,
      "deliverableViewer": true,
      "gateApprovalUI": true,
      "progressTimeline": true,
      "metricsPanel": true
    },
    "branding": {
      "title": "Proposal Builder",
      "subtitle": "Create compelling proposals with structured quality gates"
    }
  },

  "skillUI": {
    "context-ingestion": {
      "displayName": "Context Ingestion",
      "icon": "inbox",
      "outputDisplay": "markdown"
    },
    "requirements": {
      "displayName": "Requirements Clarification",
      "icon": "clipboard-list",
      "outputDisplay": "markdown"
    },
    "context-cultivation": {
      "displayName": "Context Cultivation",
      "icon": "sparkles",
      "outputDisplay": "markdown"
    },
    "priority-matrix": {
      "displayName": "Priority Matrix",
      "icon": "table",
      "outputDisplay": "markdown"
    },
    "content-analysis": {
      "displayName": "Content Analysis",
      "icon": "search",
      "outputDisplay": "markdown"
    },
    "proposal-builder": {
      "displayName": "Proposal Builder",
      "icon": "document",
      "outputDisplay": "markdown"
    },
    "retrospective": {
      "displayName": "Retrospective",
      "icon": "chart-bar",
      "outputDisplay": "markdown"
    }
  },

  "metadata": {
    "author": "Orchestrator",
    "tags": ["proposal", "sales", "consulting", "strategy"]
  }
}
