{
  "id": "refactor-loop",
  "name": "Refactor Loop",
  "version": "1.0.0",
  "description": "Refactor loop for improving code quality without changing behavior. Takes architectural analysis through scoped refactoring, testing, verification, and review with enforced quality gates.",

  "phases": [
    {
      "name": "INIT",
      "skills": ["architecture-review"],
      "required": true
    },
    {
      "name": "IMPLEMENT",
      "skills": ["refactor"],
      "required": true
    },
    {
      "name": "TEST",
      "skills": ["test-generation"],
      "required": true
    },
    {
      "name": "VERIFY",
      "skills": ["code-verification"],
      "required": true
    },
    {
      "name": "REVIEW",
      "skills": ["code-review"],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": ["retrospective"],
      "required": true
    }
  ],

  "gates": [
    {
      "id": "scope-gate",
      "name": "Refactor Scope Approval",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": ["REFACTOR-SCOPE.md"]
    },
    {
      "id": "verification-gate",
      "name": "Verification Check",
      "afterPhase": "VERIFY",
      "required": true,
      "approvalType": "auto",
      "deliverables": ["VERIFICATION.md"],
      "autoCheck": "build passes, tests pass, lint clean"
    },
    {
      "id": "review-gate",
      "name": "Code Review Approval",
      "afterPhase": "REVIEW",
      "required": true,
      "approvalType": "human",
      "deliverables": ["CODE-REVIEW.md"]
    }
  ],

  "defaults": {
    "mode": "greenfield",
    "autonomy": "supervised"
  },

  "ui": {
    "theme": "refactor",
    "layout": "chat-focused",
    "features": {
      "skillBrowser": true,
      "deliverableViewer": true,
      "gateApprovalUI": true,
      "progressTimeline": true,
      "metricsPanel": true
    },
    "branding": {
      "title": "Refactor Harness",
      "subtitle": "Improve without breaking"
    }
  },

  "skillUI": {
    "architecture-review": {
      "displayName": "Architecture Review",
      "icon": "sitemap",
      "outputDisplay": "markdown"
    },
    "refactor": {
      "displayName": "Refactoring",
      "icon": "refresh",
      "outputDisplay": "diff"
    },
    "test-generation": {
      "displayName": "Test Generation",
      "icon": "beaker",
      "outputDisplay": "code"
    },
    "code-verification": {
      "displayName": "Code Verification",
      "icon": "check-circle",
      "outputDisplay": "markdown"
    },
    "code-review": {
      "displayName": "Code Review",
      "icon": "eye",
      "outputDisplay": "markdown"
    },
    "retrospective": {
      "displayName": "Retrospective",
      "icon": "refresh",
      "outputDisplay": "markdown"
    }
  },

  "metadata": {
    "author": "Orchestrator",
    "tags": ["refactor", "improvement", "code-quality"],
    "changelog": {
      "1.0.0": "Initial release"
    }
  }
}
