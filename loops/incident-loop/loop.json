{
  "id": "incident-loop",
  "name": "Incident Loop",
  "version": "1.0.0",
  "description": "Incident response loop for triage, mitigation, deployment, and postmortem. Takes incident reports through severity assessment, mitigation, verified fix deployment, and documentation with enforced quality gates.",
  "phases": [
    {
      "name": "INIT",
      "skills": [
        "incident-triage"
      ],
      "required": true
    },
    {
      "name": "IMPLEMENT",
      "skills": [
        "mitigation"
      ],
      "required": true
    },
    {
      "name": "VERIFY",
      "skills": [
        "code-verification"
      ],
      "required": true
    },
    {
      "name": "SHIP",
      "skills": [
        "deploy"
      ],
      "required": true
    },
    {
      "name": "DOCUMENT",
      "skills": [
        "postmortem"
      ],
      "required": true
    },
    {
      "name": "COMPLETE",
      "skills": [
        "retrospective"
      ],
      "required": true
    }
  ],
  "gates": [
    {
      "id": "severity-gate",
      "name": "Severity Assessment",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "INCIDENT-TRIAGE.md"
      ]
    },
    {
      "id": "verification-gate",
      "name": "Verification Check",
      "afterPhase": "VERIFY",
      "required": true,
      "approvalType": "auto",
      "deliverables": [
        "VERIFICATION.md"
      ],
      "autoCheck": "build passes, tests pass"
    },
    {
      "id": "deploy-gate",
      "name": "Deployment Approval",
      "afterPhase": "SHIP",
      "required": true,
      "approvalType": "human",
      "deliverables": []
    }
  ],
  "defaults": {
    "mode": "greenfield",
    "autonomy": "supervised"
  },
  "ui": {
    "theme": "incident",
    "layout": "chat-focused",
    "features": {
      "skillBrowser": true,
      "deliverableViewer": true,
      "gateApprovalUI": true,
      "progressTimeline": true,
      "metricsPanel": true
    },
    "branding": {
      "title": "Incident Harness",
      "subtitle": "Respond and recover"
    }
  },
  "skillUI": {
    "incident-triage": {
      "displayName": "Incident Triage",
      "icon": "exclamation-circle",
      "outputDisplay": "markdown"
    },
    "mitigation": {
      "displayName": "Mitigation",
      "icon": "shield-check",
      "outputDisplay": "markdown"
    },
    "code-verification": {
      "displayName": "Code Verification",
      "icon": "check-circle",
      "outputDisplay": "markdown"
    },
    "deploy": {
      "displayName": "Deployment",
      "icon": "rocket",
      "outputDisplay": "markdown"
    },
    "postmortem": {
      "displayName": "Postmortem",
      "icon": "document-text",
      "outputDisplay": "markdown"
    },
    "retrospective": {
      "displayName": "Retrospective",
      "icon": "refresh",
      "outputDisplay": "markdown"
    }
  },
  "metadata": {
    "author": "Orchestrator",
    "tags": [
      "incident",
      "response",
      "production",
      "postmortem"
    ],
    "changelog": {
      "1.0.0": "Initial release"
    },
    "category": "development"
  }
}
