{
  "id": "bugfix-loop",
  "name": "Bug Fix Loop",
  "version": "1.0.0",
  "description": "Systematic debugging loop from reproduction to verified fix. Takes bug reports through reproduction, root cause analysis, implementation, testing, verification, and review with enforced quality gates.",
  "category": "development",
  "phases": [
    {
      "name": "INIT",
      "order": 0,
      "skills": [
        {
          "skillId": "bug-reproducer",
          "required": true,
          "order": 0
        }
      ],
      "required": true
    },
    {
      "name": "SCAFFOLD",
      "order": 1,
      "skills": [
        {
          "skillId": "debug-assist",
          "required": true,
          "order": 0
        },
        {
          "skillId": "root-cause-analysis",
          "required": true,
          "order": 1
        }
      ],
      "required": true
    },
    {
      "name": "IMPLEMENT",
      "order": 2,
      "skills": [
        {
          "skillId": "implement",
          "required": true,
          "order": 0
        }
      ],
      "required": true
    },
    {
      "name": "TEST",
      "order": 3,
      "skills": [
        {
          "skillId": "test-generation",
          "required": true,
          "order": 0
        }
      ],
      "required": true
    },
    {
      "name": "VERIFY",
      "order": 4,
      "skills": [
        {
          "skillId": "code-verification",
          "required": true,
          "order": 0
        }
      ],
      "required": true
    },
    {
      "name": "REVIEW",
      "order": 5,
      "skills": [
        {
          "skillId": "code-review",
          "required": true,
          "order": 0
        }
      ],
      "required": true
    },
    {
      "name": "COMPLETE",
      "order": 6,
      "skills": [
        {
          "skillId": "retrospective",
          "required": true,
          "order": 0
        }
      ],
      "required": true
    }
  ],
  "gates": [
    {
      "id": "repro-gate",
      "name": "Reproduction Confirmation",
      "afterPhase": "INIT",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "BUG-REPRODUCTION.md"
      ]
    },
    {
      "id": "diagnosis-gate",
      "name": "Diagnosis Approval",
      "afterPhase": "SCAFFOLD",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "ROOT-CAUSE.md"
      ]
    },
    {
      "id": "verification-gate",
      "name": "Verification Check",
      "afterPhase": "VERIFY",
      "required": true,
      "approvalType": "auto",
      "deliverables": [
        "VERIFICATION.md"
      ]
    },
    {
      "id": "review-gate",
      "name": "Code Review Approval",
      "afterPhase": "REVIEW",
      "required": true,
      "approvalType": "human",
      "deliverables": [
        "CODE-REVIEW.md"
      ]
    }
  ],
  "defaultMode": "greenfield",
  "defaultAutonomy": "supervised",
  "skillCount": 8,
  "phaseCount": 7,
  "author": "Orchestrator"
