# Anthropic API Key (required for AI features like inbox processing)
ANTHROPIC_API_KEY=your_api_key_here

# Server
PORT=3002
HOST=0.0.0.0

# API Authentication (optional — if set, all /api and /mcp routes require this key)
API_KEY=

# CORS — comma-separated origins allowed to call the API
# Default: http://localhost:3003
# Set to * for permissive mode (development)
ALLOWED_ORIGINS=http://localhost:3003

# Logging
LOG_LEVEL=info
